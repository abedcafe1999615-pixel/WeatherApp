<body>
    <div class="container">
        <header>
            <h1>🌤️ تطبيق الطقس</h1>
            <div class="search-box">
                <input type="text" id="city-input" placeholder="أدخل اسم المدينة...">
                <button id="search-btn">بحث</button>
            </div>
        </header>

        <main>
            <div class="weather-card" id="weather-card">
                <div class="location">
                    <h2 id="city-name">--</h2>
                    <p id="country">--</p>
                </div>
                
                <div class="weather-info">
                    <div class="temperature">
                        <span id="temp">--</span>
                        <sup>°C</sup>
                    </div>
                    <div class="description">
                        <img id="weather-icon" src="" alt="" style="display: none;">
                        <p id="weather-desc">--</p>
                    </div>
                </div>

                <div class="details">
                    <div class="detail-item">
                        <span>💧 الرطوبة</span>
                        <span id="humidity">--%</span>
                    </div>
                    <div class="detail-item">
                        <span>💨 سرعة الرياح</span>
                        <span id="wind-speed">-- م/ث</span>
                    </div>
                    <div class="detail-item">
                        <span>☁️ الضغط</span>
                        <span id="pressure">-- hPa</span>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script>
        class WeatherApp {
            constructor() {
                this.apiKey = 'a21aa4590ddae363b4ff24483dfa6a2a'; // مفتاحك
                this.baseUrl = 'https://api.openweathermap.org/data/2.5';
                this.init();
            }

            init() {
                this.bindEvents();
                this.getCurrentLocation();
            }

            bindEvents() {
                document.getElementById('search-btn').addEventListener('click', () => {
                    this.searchWeather();
                });

                document.getElementById('city-input').addEventListener('keypress', (e) => {
                    if (e.key === 'Enter') {
                        this.searchWeather();
                    }
                });
            }

            getCurrentLocation() {
                if (navigator.geolocation) {
                    navigator.geolocation.getCurrentPosition(
                        (position) => {
                            const { latitude, longitude } = position.coords;
                            this.getWeatherByCoords(latitude, longitude);
                        },
                        (error) => {
                            console.log('الموقع غير متاح، استخدام الرياض افتراضياً');
                            this.getWeatherByCity('الرياض');
                        }
                    );
                } else {
                    this.getWeatherByCity('الرياض');
                }
            }

            async searchWeather() {
                const cityInput = document.getElementById('city-input');
                const city = cityInput.value.trim();
                
                if (city) {
                    await this.getWeatherByCity(city);
                    cityInput.value = '';
                }
            }

            async getWeatherByCity(city) {
                try {
                    this.showLoading();
                    
                    const response = await fetch(
                        `${this.baseUrl}/weather?q=${city}&units=metric&appid=${this.apiKey}&lang=ar`
                    );
                    
                    if (!response.ok) {
                        throw new Error('City not found');
                    }
                    
                    const data = await response.json();
                    this.displayWeather(data);
                    
                } catch (error) {
                    this.showError('لم يتم العثور على المدينة. حاول مرة أخرى.');
                }
            }

            async getWeatherByCoords(lat, lon) {
                try {
                    this.showLoading();
                    
                    const response = await fetch(
                        `${this.baseUrl}/weather?lat=${lat}&lon=${lon}&units=metric&appid=${this.apiKey}&lang=ar`
                    );
                    
                    const data = await response.json();
                    this.displayWeather(data);
                    
                } catch (error) {
                    this.showError('حدث خطأ في جلب بيانات الطقس.');
                }
            }

            displayWeather(data) {
                const weatherCard = document.getElementById('weather-card');
                weatherCard.innerHTML = `
                    <div class="location">
                        <h2 id="city-name">${data.name}</h2>
                        <p id="country">${data.sys.country}</p>
                    </div>
                    
                    <div class="weather-info">
                        <div class="temperature">
                            <span id="temp">${Math.round(data.main.temp)}</span>
                            <sup>°C</sup>
                        </div>
                        <div class="description">
                            <img id="weather-icon" src="https://openweathermap.org/img/wn/${data.weather[0].icon}@2x.png" alt="${data.weather[0].description}">
                            <p id="weather-desc">${data.weather[0].description}</p>
                        </div>
                    </div>

                    <div class="details">
                        <div class="detail-item">
                            <span>💧 الرطوبة</span>
                            <span id="humidity">${data.main.humidity}%</span>
                        </div>
                        <div class="detail-item">
                            <span>💨 سرعة الرياح</span>
                            <span id="wind-speed">${data.wind.speed} م/ث</span>
                        </div>
                        <div class="detail-item">
                            <span>☁️ الضغط</span>
                            <span id="pressure">${data.main.pressure} hPa</span>
                        </div>
                    </div>
                `;
            }

            showLoading() {
                const weatherCard = document.getElementById('weather-card');
                weatherCard.innerHTML = `<div class="loading">جاري تحميل بيانات الطقس...</div>`;
            }

            showError(message) {
                const weatherCard = document.getElementById('weather-card');
                weatherCard.innerHTML = `<div class="error">${message}</div>`;
                setTimeout(() => {
                    this.getCurrentLocation();
                }, 3000);
            }
        }

        document.addEventListener('DOMContentLoaded', () => {
            new WeatherApp();
        });
    </script>
</body>
